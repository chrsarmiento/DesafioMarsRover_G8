<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBarOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewTwo"
        app:layout_constraintBottom_toTopOf="@id/imageViewThree"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/imageViewOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewTwo"
        app:layout_constraintBottom_toTopOf="@id/imageViewThree"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="Nasa Rover One"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarTwo"
        app:layout_constraintLeft_toRightOf="@id/imageViewOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageViewFour"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toRightOf="@id/imageViewOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageViewFour"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Nasa Rover Two"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarThree"
        app:layout_constraintRight_toLeftOf="@id/imageViewFour"
        app:layout_constraintTop_toBottomOf="@id/imageViewOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toLeftOf="@id/imageViewFour"
        app:layout_constraintTop_toBottomOf="@id/imageViewOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarFour"
        app:layout_constraintLeft_toRightOf="@id/imageViewThree"
        app:layout_constraintTop_toBottomOf="@id/imageViewTwo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toRightOf="@id/imageViewThree"
        app:layout_constraintTop_toBottomOf="@id/imageViewTwo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Nasa Rover Four"/>


    <Button
        android:id="@+id/buttonThreadUi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW ALERT THREAD UI"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewThree"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>